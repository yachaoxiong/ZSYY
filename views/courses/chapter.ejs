                                    <label class="custom-control-label" for="<%=i%>a2"><%=questions[i].a2%></label>
                                </div>
                            </div>
                            <div class="question-answer">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="<%=i%>a3" name="<%=questions[i].question%>" class="custom-control-input" value="<%=questions[i].a3%>">
                                    <label class="custom-control-label" for="<%=i%>a3"><%=questions[i].a3%></label>
                                </div>
                            </div>
                           <%}%>


